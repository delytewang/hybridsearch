{
  "name": "hybridsearch",
  "version": "1.0.0",
  "description": "A lightweight hybrid search library with vector and keyword search",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "search",
    "vector-search",
    "hybrid-search",
    "embedding",
    "sqlite",
    "postgresql",
    "pgvector",
    "semantic-search"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.4.0",
    "chokidar": "^3.6.0",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/chokidar": "^1.7.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/delytewang/hybridsearch"
  }
}
